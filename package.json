  },
  "repository": {
		"type": "git",
		"url": "https://github.com/callmefabioo/disguise"
	},
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest --silent",
    "test:dev": "jest --watch",
    "pretest": "npm run build",
    "prerelease": "npm run test && npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@types/jest": "^25.2.1",
    "babel-jest": "^25.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.5",
    "prettier": "^2.0.4",
    "rollup": "^2.6.1",
    "rollup-plugin-babel": "^4.4.0"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "commonjs": true
    },
    "extends": [
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "arrowParens": "always",
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "semi": true,
    "useTabs": true,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests --coverage"
    ]
  }
}
